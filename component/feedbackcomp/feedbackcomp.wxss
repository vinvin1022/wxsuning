/* component/feedbackcomp/feedbackcomp.wxss */
.feedbackcomp{opacity: 0}
.feedbackpop{position: fixed; left: 0;top:0; width: 100%; height: 100%; background-color: rgba(0,0,0,0.5); z-index: 5}
.feedcontent{position: fixed; left: 50%;top:50%; width: 550rpx;  border-radius: 12rpx; background-color: #fff; z-index: 6; transform: translate(-50%,-50%); padding:50rpx;}
.feedcontent .title{ text-align: center; font-size: 40rpx; color: #000; padding: 10rpx 0;}
.feedcontent .des{ font-size: 30rpx; line-height: 45rpx;}
.feedcontent textarea{border: 1px solid #e3e3e3; border-radius: 8rpx; width: 100%; height: 260rpx; box-sizing: border-box; padding: 20rpx; margin: 25rpx 0 40rpx;}
.phlder{font-size: 32rpx; color: #a0a0a0}
.feedcontent .btns button{line-height: 60rpx; font-size: 32rpx;}
.feedcontent .btns .queren{border: 1px solid #ff900c;  background-color: #ff900c; color: #fff; margin-bottom: 25rpx;}
.feedcontent .btns .cancle{ border: 1px solid #ff900c; color: #ff900c;}
.feedbackcomp .feedcontent .error{border:1px solid #ff0000}